<%= render 'shared/user_card', user: @user %>

<ul class='post_list'>
  <% if @user.posts.empty? %>
    <p class='user_empty-message'>No posts yet!</p>
  <% else %>
    <% @user.three_recent_posts.each do |post| %>
      <li class='post_list_item'>
        <%= render 'shared/post_card', post: post %>
        <ul class='post_comment_list'>
          <% if post.comments.empty? %>
            <p class='comment_empty-message'>No comments yet!</p>
          <% else %>
            <% post.five_recent_comments.each do |comment| %>
              <li class='post_comment_card'>
                <%= comment.text %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </li>
    <% end %>
  <% end %>
</ul>