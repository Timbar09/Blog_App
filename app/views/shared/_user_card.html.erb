<li class='user_card'>
  <%= link_to user do %>
    <div>
      <% if user.photo.present? && user.photo.match(/.(jpg|jpeg|png|gif)$/i) %>
        <%= image_tag(user.photo, alt: user.name, style: 'width: 100px; height: 100px;') %>
      <% else %>
        <%= image_tag('default_user.jpg', alt: user.name, style: 'width: 100px; height: 100px;') %>
      <% end %>
    </div>

    <div>
      <h2><%= user.name%></h2>
      <p>Posts(<%= user.posts_counter%>)</p>
    </div>
  <% end %>
</li>